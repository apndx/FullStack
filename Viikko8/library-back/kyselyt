query countBooksAndAuthors{
  bookCount
  authorCount
}

query listAllBooksWithDetails{
  allBooks { 
    title 
    authorName
    published 
    genres
  }
}

query listAllAuthorsWithNameAndBookCount{
  allAuthors {
    authorName
    bookCount
  }
}

query listAllBooksByAuthor {
  allBooks(authorName: "Robert Martin") {
    title
  }
}

query listAllBooks {
  allBooks {
    title
  }
}

query listAllBooks {
  allBooks {
    title,
    published,
  	author {
      authorName
    }
  }
}


query listAllBooksByGenre {
  allBooks(genre: "refactoring") {
    title
    authorName
  }
}

query {
  allBooks(authorName: "Robert Martin", genre: "refactoring") {
    title
    authorName
  }
}

query findAuthor {
  findAuthor(authorName: "EL James") {
    authorName,
    bookCount,
    born
  }
}

mutation {
  addBook(
    title: "NoSQL Distilled",
    authorName: "Martin Fowler",
    published: 2012,
    genres: ["database", "nosql"]
  ) {
    title,
    authorName
  }
}

mutation {
  addBook(
    title: "Pimeyden tango",
    authorName: "Reijo Mäki",
    published: 1997,
    genres: ["crime"]
  ) {
    title,
    authorName
  }
}

mutation {
  editAuthorBorn(authorName: "Reijo Mäki", setBornTo: 1958) {
    authorName
    born
  }
}

mutation {
  createUser(
    username: "user-here",
    password: "password-here",
    favoriteGenre: "genre-here"
  ) {
    username
  }
}